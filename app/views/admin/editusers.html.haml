%body
  %h1 Edit Users
  =form_tag users_update_or_destroy_path, method: "post" do
    %table#users{:align => "center"}
      %thead
        %tr
          %th Name
          %th Email
          %th Member Type
          %th Sign in Count
          %th Last Sign in At
          // %th Application
          %th=check_box_tag "Check All"
      %tbody
        - User.all.each do |user|
          %tr
            %td.name=user.name 
            %td.email=user.email
            %td.member_type=user.member_type
            %td.count=user.sign_in_count
            %td.last=user.last_sign_in_at
            
            %td.select=check_box_tag "select_user[]", user.id
    %br
    = button_tag 'Delete Users', name: "delete"
    = button_tag 'Give Admin', name: "giveadmin"
    = button_tag 'Remove Admin', name: "removeadmin"

