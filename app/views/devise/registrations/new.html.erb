<h1>Sign up</h1>

<body>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    
    <div class="form-inputs">
      <div class="loginfield"> <%= f.input :email, required: true, autofocus: true %> </div>
      
      <div class="loginfield"> 
        <!--</div><%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %> -->
        <%= f.input :password, required: true%>
        <p> * 8 characters minimum </p>
      </div>
      
      <div class="loginfield"> </div><%= f.input :password_confirmation, required: true, :label => "Confirm password" %> </div>
    </div>
  
    <div class="form-actions">
      <div class="confirmpassword"> </div><%= f.button :submit, "Sign up" %> </div>
    </div>
    
  <% end %>
  
  <%= render "devise/shared/links" %>
</body>
