<div class=container_graybox>
  <p> Login
</div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="signup"> <%= f.input :email, required: false, autofocus: true %> </div>
    <div class="signup"> <%= f.input :password, required: false %> </div> 
    <div class="signup"> <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
